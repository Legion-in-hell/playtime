{% extends 'base.html.twig' %}

{% block title %}Gestion des horaires - {{ company.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Gestion des horaires - {{ company.name }}</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <h2>Horaires actuels</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Jour</th>
                <th>Heure d'ouverture</th>
                <th>Heure de fermeture</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for schedule in company.schedules %}
            <tr>
                <td>{{ schedule.dayOfWeek }}</td>
                <td>{{ schedule.openingTime|date('H:i') }}</td>
                <td>{{ schedule.closingTime|date('H:i') }}</td>
                <td>
                    <a href="{{ path('schedule_edit', {'id': schedule.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                    <form action="{{ path('schedule_delete', {'id': schedule.id}) }}" method="post" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ schedule.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet horaire ?')">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun horaire défini</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>Ajouter un nouvel horaire</h2>
    {{ form_start(form) }}
    <div class="row">
        <div class="col">
            {{ form_row(form.dayOfWeek) }}
        </div>
        <div class="col">
            {{ form_row(form.openingTime) }}
        </div>
        <div class="col">
            {{ form_row(form.closingTime) }}
        </div>
    </div>
    <button type="submit" class="btn btn-success">Ajouter l'horaire</button>
    {{ form_end(form) }}
</div>
{% endblock %}