{% extends 'base.html.twig' %}

{% block title %}Accueil - Playtime{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block body %}
<header class="hero">
    <div class="hero-content">
        <h1>Trouvez votre terrain de sport idéal</h1>
        <div class="search-container">
            <form class="search-form" action="{{ path('search_results') }}" method="get">
                <select name="venue" class="search-input">
                    <option value="">Choisissez un lieu</option>
                    {% for company in sportCompanies %}
                        <option value="{{ company.id }}">{{ company.name }}</option>
                    {% endfor %}
                </select>
                <input type="date" name="date" class="search-input" placeholder="Date">
                <button type="submit" class="search-button">Rechercher</button>
            </form>
        </div>
    </div>
</header>

<main class="content">
    <section class="venues">
        <h2 class="section-title">Nos terrains</h2>
        <div class="venue-grid">
            {% for company in sportCompanies %}
                <div class="venue-card">
                    <img src="{{ asset('images/placeholder-venue.jpg') }}" alt="{{ company.name }}" class="venue-image">
                    <div class="venue-info">
                        <h3 class="venue-name">{{ company.name }}</h3>
                        <p class="venue-address">{{ company.address }}</p>
                        <div class="venue-actions">
                            {# <span class="venue-price">À partir de {{ company.price }}€/heure</span> #}
                            <a href="{{ path('company_details', {'id': company.id}) }}" class="btn-details">Voir détails</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="no-venues">Aucun terrain n'est encore enregistré.</p>
            {% endfor %}
        </div>
    </section>
</main>

<section class="cta">
    <div class="cta-content">
        <h2>Vous êtes propriétaire d'un terrain ?</h2>
        <p>Rejoignez notre plateforme et augmentez vos réservations !</p>
        <a href="{{ path('app_register_company') }}" class="btn-cta">S'inscrire maintenant</a>
    </div>
</section>
{% endblock %}