{% extends 'base.html.twig' %}

{% block title %}Inscription Entreprise{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription Entreprise</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {label: 'Adresse mail'}) }}
        {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
        {{ form_row(registrationForm.name, {label: 'Nom de l\'entreprise'}) }}
        {{ form_row(registrationForm.address, {label: 'Adresse'}) }}
        {{ form_row(registrationForm.phoneNumber, {label: 'Numéro de téléphone'}) }}
        {{ form_row(registrationForm.description, {label: 'Description'}) }}
        {{ form_row(registrationForm.agreeTerms, {label: 'Accepter les conditions'}) }}
        
        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}